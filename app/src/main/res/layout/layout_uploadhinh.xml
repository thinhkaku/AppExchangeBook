<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_photo_size_select_actual_black_24dp"
    android:layout_gravity="center_horizontal"
    android:id="@+id/imgHinhTaiLen"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:inputType="text"
        android:layout_gravity="bottom"
        android:layout_marginBottom="55sp"
        android:id="@+id/edtTenHinh"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="end|bottom"
        android:orientation="horizontal">
        <Button
            android:layout_width="100sp"
            android:text="Hủy"
            android:background="#DD2C00"
            android:textColor="@android:color/white"
            android:id="@+id/btnHuyDangKi"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:id="@+id/btnTaiHinh"
                android:background="#DD2C00"
                android:textColor="@android:color/white"
                android:text="Tải lên"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>