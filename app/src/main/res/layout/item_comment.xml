<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5sp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgHinhDaiDienBinhLuan"
            android:layout_width="40dp"
            android:layout_marginLeft="5sp"
            android:layout_height="40sp"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF0040"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:id="@+id/txtTenNguoiBinhLuan"
                android:textColor="@android:color/black"
                android:layout_weight="1"/>

        </LinearLayout>
        <Button
            android:layout_width="30sp"
            android:id="@+id/btnDeleteBinhLuan"
            android:background="@drawable/ic_delete_forever_black_24dp"
            android:layout_height="25sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imgHinhBinhLuanList"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/txtThoiGianBL"
        android:gravity="center|right"
        android:paddingRight="15sp"
        android:layout_height="match_parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="@android:color/holo_red_dark"/>
</LinearLayout>