<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10sp"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgHinhDaiDienDangTin"
        android:layout_width="49dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8sp"
        android:layout_marginLeft="15sp"
        app:civ_border_color="#FF0040"
        app:civ_border_width="0dp" />

    <TextView
        android:id="@+id/txtTenUser"
        android:layout_width="306dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingLeft="20sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/edtTenSachDang"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTenUser"
        android:hint="@string/ten_s"
        android:inputType="textImeMultiLine"
        android:textColorHint="@android:color/white"
        android:paddingLeft="20sp"/>

    <EditText
        android:id="@+id/edtGiaSachDang"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:hint="@string/gia_s"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:inputType="number"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtTenSachDang"
        android:textColorHint="@android:color/white"
        android:paddingLeft="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/edtGiaSachDang"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/edtNoiDungDang"/>

    <EditText
        android:id="@+id/edtNoiDungDang"
        android:layout_width="match_parent"
        android:layout_height="260sp"

        android:gravity="top|left"
        android:textColor="@android:color/black"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:layout_marginTop="5sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtGiaSachDang"
        android:hint="@string/noi_dung"
        android:inputType="textImeMultiLine"
        android:background="@drawable/border_noi_dung_tin"/>

    <Button
        android:id="@+id/btnHuyDangTin"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#70000000"
        android:text="@string/cancle"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnNextDangTin"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#70000000"
        android:text="@string/next"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/imgHinhDaiDienDangTin"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="2sp"
        android:layout_height="45dp"
        android:background="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>