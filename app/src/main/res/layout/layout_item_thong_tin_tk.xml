<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="65sp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:id="@+id/lnearDangTin"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:layout_weight="5"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:id="@+id/imgHDDangBai"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="match_parent"
                android:text="Đăng bài viết mới"
                android:gravity="center"
                android:layout_marginBottom="9sp"
                android:textStyle="bold"
                android:layout_weight="1"

                android:textColor="@android:color/black"
                android:paddingRight="20sp"
                android:drawableRight="@drawable/ic_backup_black_24dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtTenUserTK"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Thông tin cá nhân"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txtTenUserTK"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_above="@+id/txtDiaChiTk"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Tên" />

    <TextView
        android:id="@+id/txtDiaChiTk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtEmailTK"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-171dp"
        android:text="Địa chỉ" />

    <TextView
        android:id="@+id/txtEmailTK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="171dp"
        android:text="Gmail" />

    <TextView
        android:id="@+id/txtSDTTK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198dp"
        android:text="Số điện thoại" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="155dp"
        android:gravity="center"
        android:text="Các bài đăng gần đây"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerBaiDangCaNhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="600sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
