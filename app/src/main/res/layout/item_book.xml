<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160sp"
    android:id="@+id/itemCard"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="10sp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="5sp"
    android:layout_marginTop="5sp">
    <LinearLayout
        android:layout_width="150sp"
        android:layout_height="255sp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23sp"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginTop="10sp">
            <TextView
                android:id="@+id/txtGiamGia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="7sp"
                android:textStyle="bold"
                android:layout_marginLeft="5sp"
                android:background="@drawable/border_text_giam_gia"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/btnThemChiTiet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/danh_muc"
                android:background="#00000000"
                android:layout_marginRight="5sp"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135sp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/txtHinhSach"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txtTenS"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:text="Tên"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="10sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtGSach"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Giá sách"
                    android:gravity="center|left"
                    android:textColor="#880E4F"
                    android:textStyle="bold"
                    android:textSize="9sp"
                    android:paddingLeft="10sp"/>

                <TextView
                    android:id="@+id/txtGiaGoc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="Giá gốc"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="9sp"
                    android:paddingRight="5sp"
                    android:ellipsize="end" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="30sp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="5sp">
                <android.support.v7.widget.CardView
                    android:layout_width="100sp"
                    android:layout_height="25sp"
                    app:cardCornerRadius="10sp">
                    <Button
                        android:id="@+id/btnChonMua"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chọn mua"
                        android:background="#880061"
                        android:textColor="@android:color/white"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>