<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250sp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="start"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:id="@+id/lnMain"
        android:gravity="center"
        android:background="@drawable/logo9"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_marginTop="20sp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:gravity="left|center"
                android:text="Thá»‹nh kaku"
                android:layout_marginTop="10sp"
                android:paddingLeft="20sp"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="20sp"
                android:textColor="@android:color/white"
                android:gravity="center|left"
                android:textStyle="italic"
                android:text="Gmail"
                android:layout_marginTop="10sp"
                android:id="@+id/txtGmail"
                android:layout_height="25sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars = "horizontal"
        android:scrollbarStyle="outsideInset"
        android:layout_centerVertical="false"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:scrollbars = "horizontal"
            android:scrollbarStyle="outsideInset"
            android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/btnTrangChu"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="@string/trang_chu"
                android:gravity="center|left"
                android:paddingLeft="20sp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/home"
                android:drawablePadding="25sp"
                android:textColor="@android:color/black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btnDanhMuc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/tat_ca_dm"
                    android:gravity="center|left"
                    android:paddingLeft="20sp"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/danh_muc"
                    android:drawablePadding="25sp"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="11+"
                    android:layout_margin="5sp"
                    android:background="@drawable/bg_text_add"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/btnkhuyenMai"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="@string/khuyen_mai"
                android:gravity="center|left"
                android:paddingLeft="20sp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_local_offer_black_24dp"
                android:drawablePadding="25sp"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/btnBanChay"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="@string/ban_chay"
                android:gravity="center|left"
                android:paddingLeft="20sp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_subtitles_black_24dp"
                android:drawablePadding="25sp"
                android:textColor="@android:color/black"
               />
            <TextView
                android:id="@+id/btnDanhGia"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="@string/danh_gia"
                android:gravity="center|left"
                android:paddingLeft="20sp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_subtitles_black_24dp"
                android:drawablePadding="25sp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/btnVeChungToi"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="@string/ve_ct"
                android:gravity="center|left"
                android:paddingLeft="20sp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_business_black_24dp"
                android:drawablePadding="25sp"
                android:textColor="@android:color/black" />

        </LinearLayout>
        </ScrollView>

    </LinearLayout>
    </ScrollView>
</LinearLayout>