<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center|top">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:orientation="vertical"
        android:layout_weight="1">
        <EditText
            android:id="@+id/edtTenKh"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Tên *"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="center|left"
            android:background="@drawable/border_text_bt"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/edtSdtKh"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Số điện thoại *"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="center|left"
            android:background="@drawable/border_text_bt"
            android:textSize="15sp"
            android:inputType="number"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Việt nam"
            android:gravity="center|left"
            android:paddingLeft="20sp"
            android:background="@drawable/border_text_bt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Huyện"
            android:gravity="center|left"
            android:paddingLeft="20sp"
            android:drawableRight="@drawable/ic_expand_more_black_24dp"
            android:background="@drawable/border_text_bt"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:orientation="vertical"
        android:layout_weight="1">
        <EditText
            android:id="@+id/edtHoKH"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Họ *"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="center|left"
            android:background="@drawable/border_text_bt"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/txtSdtAgain"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="@string/nhap_lai_dt"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="center|left"
            android:background="@drawable/border_text_bt"
            android:textSize="15sp"
            android:inputType="number"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="@string/tinh"
            android:gravity="center|left"
            android:paddingLeft="20sp"
            android:drawableRight="@drawable/ic_expand_more_black_24dp"
            android:background="@drawable/border_text_bt"/>
        <EditText
            android:id="@+id/edtMaBuuDien"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="@string/ma_buu_dien"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="center|left"
            android:background="@drawable/border_text_bt"
            android:textSize="15sp"/>

    </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/edtDiaChi"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:hint="@string/dia_chi"
        android:paddingLeft="20sp"
        android:textColor="@android:color/black"
        android:gravity="center|left"
        android:background="@drawable/border_text_bt"
        android:textSize="15sp"/>

</LinearLayout>