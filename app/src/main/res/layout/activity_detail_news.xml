<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarChiTiet"
                app:title="h"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/black"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="7sp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgHinhDaiDienChitiet"
                android:layout_width="40dp"
                android:layout_marginLeft="5sp"
                android:layout_height="match_parent"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF0040"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txtTenNguoiDangChiTiet"
                        android:paddingLeft="10sp"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:gravity="center|left"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5sp"
                        android:id="@+id/btnGoi"
                        android:background="@drawable/ic_call_black_24dp"
                        android:layout_weight="7"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:paddingLeft="10sp"
                    android:id="@+id/txtThoiGianChiTiet"
                    android:textStyle="italic"
                    android:textSize="10sp"
                    android:gravity="center|left"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10sp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/txtTenSachChiTiet"
                android:textColor="@android:color/holo_green_dark"
                android:gravity="center|left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="italic"
                android:textSize="17sp"
                android:layout_weight="1"
                android:id="@+id/txtGiaSachChiTiet"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center|left"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="top"
            android:textSize="15sp"
            android:id="@+id/txtNoiDungChiTiet"
            android:paddingLeft="5sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_marginTop="15sp"
            android:background="@android:color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:background="#00000000"
                android:layout_weight="1"
                android:paddingLeft="20sp"
                android:id="@+id/btnLikeChiTiet"
                android:gravity="left|center"
                android:drawablePadding="15sp"
                android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="1sp"
                android:background="@android:color/black"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20sp"
                android:background="#00000000"
                android:id="@+id/btnBinhLuanChiTiet"
                android:drawableLeft="@drawable/ic_mode_comment_black_24dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="1sp"
                android:background="@android:color/black"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20sp"
                android:id="@+id/btnLuuChiTiet"
                android:background="#00000000"
                android:drawableLeft="@drawable/ic_local_grocery_store_black_24dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@android:color/black"/>
        <ImageView
            android:id="@+id/imgHinhBinhLuan"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="15sp"
            android:gravity="center"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:background="@drawable/border_text_bt"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgHinhDaiDienUserChitiet"
                android:layout_width="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF0040"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="37sp"
                android:paddingLeft="15sp"
                android:layout_marginLeft="5sp"
                android:singleLine="true"
                android:layout_marginRight="5sp"
                android:layout_weight="1"
                android:background="@drawable/custum_button"
                android:inputType="text"
                android:hint="@string/viet_bl"
                android:id="@+id/edtBinhLuan"/>
            <ImageButton
                android:id="@+id/btnCameraBinhLuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/ic_menu_camera"
                android:background="#00000000"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:id="@+id/btnGuiBinhLuan"
                android:background="@drawable/ic_send_black_24dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerBinhLuan"
            android:layout_height="match_parent"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerHinh"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>
