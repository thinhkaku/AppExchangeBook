<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/lnItemLuuTru"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="7sp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgHinhDaiDienLuuTru"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            app:civ_border_color="#FF0040"
            app:civ_border_width="0dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTenNguoiDangLuuTru"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingLeft="10sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCallListLuuTru"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="7"
                    android:background="@drawable/ic_call_black_24dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtThoiGianLuuTru"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|top|left"
                    android:paddingLeft="10sp"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/btnMessageListLuuTru"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_weight="7"
                    android:background="@drawable/ic_message_black_24dp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTenSachLuuTru"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="10sp"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtGiaSachLuuTru"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="17sp"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtNoiDungLuuTru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingLeft="5sp"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300sp">
        <include layout="@layout/item_one_image"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@android:color/black"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnBinhLuanLuuTru"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:drawableLeft="@drawable/ic_mode_comment_black_24dp"
                android:paddingLeft="20sp"/>
            <TextView
                android:layout_width="1sp"
                android:background="@android:color/black"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20sp"
                android:id="@+id/btnXoaItemLuuTru"
                android:background="#00000000"
                android:drawableLeft="@drawable/ic_delete_forever_black_24dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>